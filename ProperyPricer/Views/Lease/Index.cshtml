@model IList<ProperyPricer.Models.LeaseModels>

@{
    ViewBag.Title = "View";
    int i=1;
    ViewData["list"] = Model;
    ProperyPricer.Models.LeaseModels list = new ProperyPricer.Models.LeaseModels();
    
}

<h3>Tenants </h3>


<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div id="propNameTitle" class="columnTitle">
                <h3>Property Name</h3>
            </div>

            <button type="button" class="btn btn-default btn-sm" id="addBtn">
                <span class="glyphicon glyphicon-plus" aria-hidden="true" style="color:#A9C8A7; font-size:14px"></span>  Add
            </button>
            <div id="addLeaseForm">
                @using (Html.BeginForm("AddLease", "Lease", FormMethod.Post))
                {
                    
                    
                    <div class="container">
                        <div class="row">

                            <div class="col-md-2" style="margin-top: 17px;"><button type="submit" class="btn btn-default btn-sm" id="sbtBtn" width="70"><span class="glyphicon glyphicon-ok" aria-hidden="true" style="color:#A9C8A7; font-size:14px; margin-right:6px;"></span>Submit</button></div>
                            <div class="col-md-10 right">
                                <table class="">
                                    <tr>
                                        <th>Name:</th>
                                        <th>Unit:</th>
                                        <th>Area:</th>
                                        <th>Lease Start:</th>
                                        <th>Lease End:</th>
                                        <th>Initial Rent:</th>
                                    </tr>


                                    <tr>

                                        <td>
                                            @Html.TextBox("TenantName","" )
                                        </td>
                                        <td>@Html.TextBox("Unit","")</td>
                                        <td>@Html.TextBox("Area","")</td>
                                        <td>@Html.TextBox("LeaseStart", "", new { @id = "lStartDate" })</td>
                                        <td>@Html.TextBox("LeaseEnd","", new { @id = "lEndDate" })</td>
                                        <td>@Html.TextBox("InitialRent", "")</td>
                                    </tr>
                                </table>
                            </div>

                        </div>
                    </div>

                }
            </div>
            <table class="table table-hover table-condensed" id="leaseTable">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Unit</th>
                    <th>Area</th>
                    <th>Lease Start</th>
                    <th>Lease End</th>
                    <th>Initial Rent</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@i.ToString()</td>
                        <td>@Html.DisplayFor(f => item.TenantName)</td>
                        <td>@Html.DisplayFor(f => item.Unit)</td>
                        <td>@Html.DisplayFor(f => item.Area)</td>
                        <td>@Html.DisplayFor(f => item.LeaseStart)</td>
                        <td>@Html.DisplayFor(f => item.LeaseEnd)</td>
                        <td>@Html.DisplayFor(f => item.InitialRent)</td>

                    </tr>
                    i++;
                }

            </table>
        </div>
        <div class="col-md-4">
            <div id="cashflowTitle" class="columnTitle">
                <h3>Cashflows</h3>
            </div>
            <div id="cashflowColumn">
               
            </div>

        </div>
    </div>

</div>

